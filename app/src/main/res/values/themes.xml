<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Theme.MyApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary theme colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOutline">#B0BEC5</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorSurface">@color/colorSurface</item>

        <!-- Text colors -->
        <item name="android:textColor">@color/colorOnBackground</item>
        <item name="android:textColorPrimary">@color/colorOnPrimary</item>
        <item name="android:textColorSecondary">@color/colorOnSurface</item>
        <item name="colorOnSurface">#FFFFFF</item>


        <!-- Default text appearance -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.Headline1</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Body1</item>

        <!-- Font -->
        <item name="fontFamily">@font/poppins</item>




    </style>

    <!-- Dialog style with custom background color -->
    <style name="CustomDialogStyle" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:windowBackground">@color/colorSurface</item> <!-- Set background color -->
        <item name="android:textColorPrimary">@color/colorOnSurface</item> <!-- Text color -->
        <item name="android:textColorSecondary">@color/colorOnSurface</item>
    </style>
</resources>
