<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Theme.MyApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary theme colors -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorAccent</item>

        <!-- Background colors -->
        <item name="android:colorBackground">#121212</item> <!-- Dark background -->
        <item name="colorSurface">#1E1E1E</item> <!-- Dark surface -->

        <!-- Text colors -->
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#B0BEC5</item>

        <!-- Default text appearance -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.Headline1</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Body1</item>
    </style>

</resources>
